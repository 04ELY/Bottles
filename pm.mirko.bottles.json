{
    "app-id": "pm.mirko.bottles",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "bottles",
    "tags": ["devel", "development"],
    "finish-args": [
        "--allow=multiarch",
        "--allow=devel",
        "--share=network",
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
  	"--socket=pulseaudio",
        "--socket=session-bus",
        "--filesystem=xdg-desktop",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-music",
        "--filesystem=xdg-videos",
        "--filesystem=xdg-download",
        "--device=all"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "bottles",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [{
                "type": "git",
                "url": "file:///home/mirko/Projects/brombinmirko/Bottles",
                "branch": "develop"
            }]
        }
    ]
}
