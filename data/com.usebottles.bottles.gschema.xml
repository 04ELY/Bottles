<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="bottles">
	<schema id="com.usebottles.bottles" path="/com/usebottles/bottles/">
    <key type="b" name="dark-theme">
      <default>false</default>
      <summary>Dark theme</summary>
      <description>Enable the dark theme.</description>
    </key>
    <key type="i" name="window-width">
      <default>850</default>
      <summary>Window width</summary>
      <description>Change the window width</description>
    </key>
    <key type="i" name="window-height">
      <default>600</default>
      <summary>Window height</summary>
      <description>Change the window height</description>
    </key>
    <key type="b" name="notifications">
      <default>true</default>
      <summary>Notifications</summary>
      <description>Enable notifications.</description>
    </key>
    <key type="b" name="temp">
      <default>false</default>
      <summary>Temp cleaning</summary>
      <description>Clean Temp path on boot.</description>
    </key>
    <key type="b" name="release-candidate">
      <default>false</default>
      <summary>Release Candidate</summary>
      <description>Toggle Release Candidate for Runners</description>
    </key>
    <key type="s" name="startup-view">
      <default>'page_add'</default>
      <summary>Startup view</summary>
      <description>Choose which view should be loaded on application startup.</description>
    </key>
    <key type="b" name="experiments">
      <default>false</default>
      <summary>Experiments</summary>
      <description>Toggle experimental features such as versioning and installers.Release Candidate for Runners</description>
    </key>
    <key type="b" name="experiments-versioning">
      <default>false</default>
      <summary>Experiments:versioning</summary>
      <description>Toggle experimental versioning feature</description>
    </key>
    <key type="b" name="experiments-installers">
      <default>false</default>
      <summary>Experiments:installers</summary>
      <description>Toggle experimental installers feature</description>
    </key>
    <key type="b" name="auto-close-bottles">
      <default>false</default>
      <summary>Automatically close Bottles</summary>
      <description>Close Bottles after starting executable from file manager</description>
    </key>
	</schema>
</schemalist>
